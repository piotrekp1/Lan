x :: Int; // outer_x
foo :: Int -> Int;
foo z := {
    x += 3; // add 3 to outer_x
};
x = 0;
foo2 :: Int -> Int;
foo2 z := {
    x :: Int; // inner_x
    z :: Int;
    x = 0;
    z = foo 3; // outer_x = 3, inner_x = 0
    print (show x); // 0
    print (show z); // 3
};

foo2 5;
print (show x); // 3
